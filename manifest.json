{
  "manifest_version": 2,
  "name": "dotPageMod",
  "version": "0.0.2",
  "description": "user configuration powered PageMods to load local CSS and JavaScript into webpages",
  "developer": {
    "name": "David Kalnischkies",
    "url": "https://david.kalnischkies.de/"
  },
  "icons": {
    "96": "icon.png"
  },
  "applications": {
    "gecko": {
      "id": "dotPageMod@kalnischkies.de",
      "strict_min_version": "50.0",
      "update_url": "https://localhost:2903/does-not-exist/updates.json"
    }
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "webNavigation",
    "nativeMessaging",
    "notifications"
  ],
  "background": {
    "scripts": [ "config.js", "background.js" ]
  }
}
